{% extends 'base.html.twig' %}

{% block title %}{{ 'user.login'|trans|ucfirst }}{% endblock %}

{% block content_title %}<h1>{{ 'user.login'|trans|ucfirst }}</h1>{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="container-fluid">
            <p>{{ 'user.logged'|trans({username: app.user.username })|ucfirst }} (<a href="{{ path('user_logout') }}">{{ 'user.logout'|trans }}</a>)</p>
        </div>
    {% endif %}

    <div class="container-fluid">
        {{ form_start(loginForm) }}
        {{ form_row(loginForm.email) }}
        {{ form_row(loginForm.plainPassword) }}

        <button type="submit" class="btn btn-primary">{{ 'user.login'|trans|ucfirst }}</button>
        {{ form_end(loginForm) }}

    </div>

    <hr/>
    <div>
        <p>{{ 'user.forgot_password'|trans|ucfirst|raw }} <a href="{{ url('user_forgot_password') }}">{{ 'user.forgot_link'|trans|ucfirst }}</a></p>
        <p>{{ 'user.no_account'|trans|ucfirst|raw }} <a href="{{ url('user_register') }}">{{ 'user.registration_link'|trans|ucfirst }}</a></p>
    </div>
{% endblock %}
