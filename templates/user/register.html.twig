{% extends 'base.html.twig' %}

{% block title %}{{ 'user.register'|trans|ucfirst }}{% endblock %}

{% block content_title %}<h1>{{ 'user.register'|trans|ucfirst }}</h1>{% endblock %}

{% block body %}

    <div class="container-fluid">

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.repeatPassword.plainPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary">{{ 'user.register'|trans|ucfirst }}</button>
        {{ form_end(registrationForm) }}

    </div>

    <hr/>
    <div>
        <p>{{ 'user.existing_account'|trans|ucfirst|raw }} <a href="{{ url('user_login') }}">{{ 'user.login_link'|trans|ucfirst }}</a></p>
    </div>

{% endblock %}
