{% extends 'base.html.twig' %}

{% block title %}{{ 'user.reset_password'|trans|ucfirst }}{% endblock %}

{% block content_title %}<h1>{{ 'user.reset_password'|trans|ucfirst }}</h1>{% endblock %}

{% block body %}

    <div class="container-fluid">
        {{ form_start(form) }}
        {{ form_row(form.email) }}

        <button type="submit" class="btn btn-primary">{{ 'user.reset_password'|trans|ucfirst }}</button>
        {{ form_end(form) }}

    </div>

    <hr/>
    <div>
        <p>{{ 'user.existing_account'|trans|ucfirst|raw }} <a href="{{ url('user_login') }}">{{ 'user.login_link'|trans|ucfirst }}</a></p>
    </div>
{% endblock %}
